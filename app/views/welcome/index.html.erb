<!-- ====================== STYLES ====================== -->
<style>
  body {
    font-family: "Inter", sans-serif;
    background-color: #f9fafb;
    color: #111827;
    margin: 0;
    padding: 0;
  }

  /* HERO SECTION */
  .hero {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    padding: 80px 10%;
    background: linear-gradient(135deg, #2563eb, #1e3a8a);
    color: white;
  }

  .hero-content {
    flex: 1 1 45%;
    max-width: 550px;
  }

  .hero-content h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 15px;
  }

  .highlight {
    color: #93c5fd;
  }

  .hero-content p {
    font-size: 1.1rem;
    margin-bottom: 30px;
    color: #e2e8f0;
  }

  .hero-buttons {
    display: flex;
    gap: 20px;
  }

  .btn-primary,
  .btn-secondary {
    text-decoration: none;
    font-weight: 600;
    border-radius: 12px;
    padding: 12px 30px;
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .btn-primary {
    background-color: white;
    color: #1e3a8a;
  }

  .btn-primary:hover {
    background-color: #93c5fd;
  }

  .btn-secondary {
    border: 2px solid white;
    color: white;
  }

  .btn-secondary:hover {
    background-color: rgba(255, 255, 255, 0.15);
  }

  .hero-image {
    flex: 1 1 45%;
    text-align: right;
  }

  .hero-img {
    max-width: 480px;
    width: 100%;
    border-radius: 20px;
  }

  /* FEATURES */
  .features {
    text-align: center;
    padding: 70px 10%;
    background-color: #ffffff;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 40px;
    color: #1e3a8a;
  }

  .feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
  }

  .feature-card {
    background-color: #f3f4f6;
    border-radius: 16px;
    padding: 25px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
    transition: transform 0.3s ease;
  }

  .feature-card:hover {
    transform: translateY(-8px);
  }

  .feature-icon {
    width: 60px;
    height: 60px;
    margin-bottom: 15px;
  }

  /* COMMUNITY SECTION */
  .community {
    padding: 70px 10%;
    background: linear-gradient(135deg, #e0f2fe, #bfdbfe);
    text-align: center;
  }

  .community-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
    margin-top: 40px;
  }

  .community-img {
    width: 100%;
    height: 240px;
    object-fit: cover;
    border-radius: 16px;
  }

  /* CTA SECTION */
  .cta {
    background-color: #1e3a8a;
    color: white;
    text-align: center;
    padding: 60px 20px;
  }

  .cta h2 {
    font-size: 2rem;
    margin-bottom: 10px;
  }

  /* Modal Styling */
  .modal {
    display: none;
    position: fixed;
    z-index: 1001;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.7);
  }

  .modal-content {
    background: #f9fafb;
    margin: 10% auto;
    padding: 30px;
    border-radius: 12px;
    width: 90%;
    max-width: 400px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  .close {
    float: right;
    font-size: 1.5rem;
    cursor: pointer;
    color: #374151;
  }

  .role-buttons {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-top: 20px;
  }

  .role-btn {
    display: inline-block;
    padding: 12px 20px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: bold;
    transition: all 0.3s ease;
  }

  .learner {
    background-color: #3b82f6;
    color: white;
  }

  .instructor {
    background-color: #f59e0b;
    color: white;
  }

  .role-btn:hover {
    transform: scale(1.05);
    opacity: 0.9;
  }

  @media (max-width: 768px) {
    .hero {
      flex-direction: column-reverse;
      text-align: center;
      padding: 50px 20px;
    }

    .hero-buttons {
      justify-content: center;
    }

    .hero-img {
      max-width: 90%;
      margin-bottom: 30px;
    }
  }
</style>

<!-- ====================== SCRIPT ====================== -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("role-modal");
    const btn = document.getElementById("get-started-btn");
    const close = document.querySelector(".close");

    btn.addEventListener("click", () => {
      modal.style.display = "block";
    });

    close.addEventListener("click", () => {
      modal.style.display = "none";
    });

    window.addEventListener("click", (e) => {
      if (e.target == modal) {
        modal.style.display = "none";
      }
    });
  });
</script>
