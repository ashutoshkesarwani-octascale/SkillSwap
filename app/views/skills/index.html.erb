<h1 class="page-title">Available Skills</h1>
<p class="skill-count">Total Skills: <%= @skills.count %></p>

<!-- ==== Skills Grid ==== -->
<div class="skills-grid">
  <% @skills.each do |skill| %>
    <div class="skill-card" 
         onclick="openSkillModal('<%= skill.id %>', '<%= skill.name %>', '<%= j skill.description %>', '<%= skill.video_url %>', '<%= skill.progress || 0 %>')">
      <h2><%= skill.name %></h2>
      <div class="progress-container">
        <div class="progress-bar" style="width: <%= skill.progress || 0 %>%"></div>
      </div>
      <p class="progress-text"><%= skill.progress || 0 %>% Completed</p>
    </div>
  <% end %>
</div>

<!-- ==== Add New Skill Section ==== -->
<div class="suggestion-section">
  <h2 class="suggestion-title">üí° Have a Suggestion?</h2>
  <p class="suggestion-text">
    We‚Äôd love to hear your ideas! If you have any suggestions or feedback, click below to reach out to us.
  </p>

  <%= link_to "Contact Us", contact_index_path, class: "btn-contact" %>
</div>

<style>
/* === Suggestion Section === */
.suggestion-section {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #dbeafe 100%);
  padding: 60px 20px;
  font-family: 'Inter', sans-serif;
  text-align: center;
}

/* === Title === */
.suggestion-title {
  font-size: 2.2rem;
  font-weight: 700;
  color: #1e3a8a;
  background: linear-gradient(90deg, #2563eb, #3b82f6);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 20px;
}

/* === Text === */
.suggestion-text {
  max-width: 600px;
  font-size: 1.1rem;
  color: #374151;
  margin-bottom: 35px;
  line-height: 1.6;
}

/* === Contact Button === */
.btn-contact {
  background: linear-gradient(135deg, #2563eb, #3b82f6);
  color: white;
  font-weight: 600;
  text-decoration: none;
  padding: 14px 32px;
  border-radius: 12px;
  transition: all 0.3s ease;
  font-size: 1.05rem;
  letter-spacing: 0.3px;
  box-shadow: 0 6px 14px rgba(37, 99, 235, 0.25);
}

.btn-contact:hover {
  background: linear-gradient(135deg, #1e40af, #2563eb);
  transform: translateY(-2px);
  box-shadow: 0 10px 18px rgba(37, 99, 235, 0.35);
}

/* === Responsive === */
@media (max-width: 640px) {
  .suggestion-title {
    font-size: 1.7rem;
  }
  .suggestion-text {
    font-size: 1rem;
    padding: 0 10px;
  }
  .btn-contact {
    padding: 12px 26px;
  }
}
</style>


<!-- ==== Modal Popup ==== -->
<div id="skillModal" class="modal">
  <div class="modal-content">
    <span class="close-btn" onclick="closeSkillModal()">&times;</span>
    <h2 id="modalTitle"></h2>
    <p id="modalDescription"></p>
    <div id="modalVideoContainer"></div>

    <div class="progress-section">
      <label for="progressRange">Progress:</label>
      <input type="range" id="progressRange" min="0" max="100" value="0" oninput="updateProgressDisplay(this.value)">
      <span id="progressPercent">0%</span>
      <button id="saveProgressBtn" onclick="saveProgress()">Save</button>
    </div>

    <a href="https://meet.google.com/wbe-ntzz-qeg" target="_blank" class="meet-link">
      <img src="https://www.gstatic.com/images/branding/product/1x/meet_2020q4_48dp.png" alt="Google Meet Icon" class="meet-icon">
      Join Live Session
    </a>
  </div>
</div>

